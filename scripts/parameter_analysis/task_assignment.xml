<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="http://gtri.gatech.edu"?>
<runscript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"           
    name="SASC Capture the Flag">
  
  <run start="0.0" end="3000" dt="0.1" motion_multiplier="12"
       time_warp="0" 
       enable_gui="true" 
       start_paused="true"/>

  <!-- <multi_threaded num_threads="4">true</multi_threaded> -->
  <end_condition>time</end_condition> <!-- time, one_team, none-->  
  
  <terrain>mcmillan</terrain>  
  <background_color>191 191 191</background_color> <!-- Red Green Blue -->
  <gui_update_period>10</gui_update_period> <!-- milliseconds -->
  
  <plot_tracks>false</plot_tracks>
  <run_metrics weights="sasc">true</run_metrics>
  <show_plugins>true</show_plugins>
  <output_type>all</output_type>
  
  <log_dir>~/swarm-log</log_dir>  
      
  <latitude_origin>35.721025</latitude_origin>
  <longitude_origin>-120.767925</longitude_origin>
  <altitude_origin>300</altitude_origin>
  <show_origin>false</show_origin>
  
  <entity_interaction
    order="0"
    enable_cube_effects="false"
    ground_collision_z="-10"
    hit_detection="cone"
    fire_range_max="100000"
    fire_rate_max="0"
    collision_range="-10"
    show_cubes="false">CaptureTheFlagInteraction</entity_interaction>
  
  <metrics order="0">Sim_ToT_Metrics</metrics>

  <!-- <seed>3</seed> -->
  
  <entity_common name="all">
    <count>6</count>
    <health>1</health>
    <variance_x>1000</variance_x>
    <variance_y>1000</variance_y>
    <variance_z>0</variance_z>
    <visual_scale>50</visual_scale>
    <visual_rotate>180 0 0 1</visual_rotate>
    <z>200</z>
  </entity_common> 

  <entity entity_common="all">
    <team_id>1</team_id> 
    <color>77 77 255</color>
    <x>1250</x>
    <y>-1250</y>
    <heading>90</heading>            

    <visual_model>zephyr-blue</visual_model>
    <controller>JSBSimModelControllerDirect</controller>
    <motion_model>JSBSimModel</motion_model>
    <script_name>rascal_piedmont.xml</script_name>    
    <autonomy order="0">MissionExecutor</autonomy>
    <autonomy order="1">Formation</autonomy>
    <autonomy order="2" 
              weight_priority=".2" weight_pk="1"
              weight_dist=".2"    dist_decay="1000">AuctionPlugin</autonomy>
    <autonomy order="3">SimTimeOnTargetPlugin</autonomy>
    <autonomy order="4">TaskManagerPlugin</autonomy>
  </entity>

  <entity_common name="target">
    <count>1</count>
    <team_id>2</team_id> 
    <color>255 0 0</color>
    <heading>90</heading>            
    <visual_model>Sphere</visual_model>
    <generate_rate>1</generate_rate>
    <generate_count>1</generate_count>
    <z>100</z>
    <variance_x>100</variance_x>
    <variance_y>1000</variance_y>
    <variance_z>0</variance_z>
  </entity_common>

  <entity entity_common="target">
    <x>0</x>
    <y>1000</y>
    <generate_start_time>0</generate_start_time>
    <autonomy range="1500" pk="${pk}">Target</autonomy>

    <visual_scale>20</visual_scale>
  </entity>

  <entity entity_common="target">
    <x>500</x>
    <y>1500</y>
    <generate_start_time>20</generate_start_time>
    <autonomy range="1500" pk=".1">Target</autonomy>

  </entity>

</runscript>